// refer to:
// - <https://www.totaltypescript.com/tsconfig-cheat-sheet>
// - <https://github.com/tsconfig/bases>
// - <https://github.com/tauri-apps/create-tauri-app/blob/create-tauri-app-v4.6.2/templates/template-vue-ts/tsconfig.json>
{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "verbatimModuleSyntax": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting */
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
}
